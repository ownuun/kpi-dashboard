{
  "manifest_version": 3,
  "name": "KPI Dashboard 링크 저장",
  "version": "1.0.0",
  "description": "현재 페이지를 KPI Dashboard에 빠르게 저장합니다",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html",
  "commands": {
    "save-link": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "현재 페이지 저장"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
