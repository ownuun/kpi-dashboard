generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// NextAuth.js 필수 모델
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// 비즈니스 모델
// ============================================

enum UserRole {
  ADMIN
  MEMBER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime? @map("email_verified")

  teamId String?  @map("team_id")
  team   Team?    @relation("TeamMembers", fields: [teamId], references: [id])
  role   UserRole @default(MEMBER)

  accounts     Account[]
  sessions     Session[]
  transactions Transaction[] @relation("CreatedBy")
  createdTeams Team[]        @relation("TeamCreator")

  // 링크 공유 관련 (폴더 기반)
  linkFolders   LinkFolder[]
  personalLinks Link[]       @relation("PersonalLinks")
  createdLinks  Link[]       @relation("CreatedLinks")
  linkViews     LinkView[]

  // AI 자동 폴더 선택 설정
  aiProvider       String? @map("ai_provider")
  aiApiKey         String? @map("ai_api_key") @db.Text
  aiModel          String? @map("ai_model")
  aiAutoTagEnabled Boolean @default(true) @map("ai_auto_tag_enabled")

  // 링크 저장 설정 (이전 선택 유지)
  linkSavePersonal Boolean @default(true) @map("link_save_personal")
  linkSaveTeam     Boolean @default(false) @map("link_save_team")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Team {
  id         String @id @default(cuid())
  name       String
  inviteCode String @unique @default(cuid()) @map("invite_code")

  // 팀 생성자 (관리자) - 기존 팀은 null 가능
  creatorId String? @map("creator_id")
  creator   User?   @relation("TeamCreator", fields: [creatorId], references: [id])

  users        User[]        @relation("TeamMembers")
  categories   Category[]
  transactions Transaction[]

  // 링크 공유 관련 (폴더 기반)
  linkFolders LinkFolder[]
  links       Link[]

  // 템플릿 시스템 (간단한 카테고리 키 배열)
  enabledTemplateCategories String[]       @default(["sales"]) @map("enabled_template_categories")
  enabledTemplates          TeamTemplate[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("teams")
}

enum TransactionType {
  INCOME
  EXPENSE
}

model Category {
  id    String          @id @default(cuid())
  name  String
  type  TransactionType
  color String          @default("#3B82F6")

  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  transactions Transaction[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([teamId, name, type])
  @@map("categories")
}

model Transaction {
  id          String          @id @default(cuid())
  type        TransactionType
  amount      Int
  description String?
  date        DateTime        @default(now())

  categoryId String   @map("category_id")
  category   Category @relation(fields: [categoryId], references: [id])

  teamId String @map("team_id")
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  createdById String @map("created_by_id")
  createdBy   User   @relation("CreatedBy", fields: [createdById], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([teamId, date])
  @@index([teamId, type])
  @@index([teamId, categoryId])
  @@index([teamId, type, date])
  @@map("transactions")
}

// ============================================
// 링크 공유 모델 (v3.0 - 폴더 기반)
// ============================================

enum LinkOwnerType {
  PERSONAL
  TEAM
}

// 폴더 모델 (계층형)
model LinkFolder {
  id        String        @id @default(cuid())
  name      String
  icon      String?
  ownerType LinkOwnerType @map("owner_type")
  sortOrder Int           @default(0) @map("sort_order")

  // 계층 구조 (자기 참조)
  parentId String?      @map("parent_id")
  parent   LinkFolder?  @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children LinkFolder[] @relation("FolderHierarchy")

  // 소유자 (PERSONAL일 때 userId 사용, TEAM일 때 teamId 사용)
  userId String? @map("user_id")
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  teamId String? @map("team_id")
  team   Team?   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // 폴더에 속한 링크들
  links Link[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // 같은 부모 폴더 내에서 폴더 이름 중복 방지
  @@unique([userId, parentId, name, ownerType])
  @@unique([teamId, parentId, name, ownerType])
  @@index([userId, ownerType])
  @@index([teamId, ownerType])
  @@index([parentId])
  @@index([sortOrder])
  @@map("link_folders")
}

// 링크 모델
model Link {
  id          String        @id @default(cuid())
  url         String
  title       String
  description String?       @db.Text
  favicon     String?
  rating      Int           @default(0)
  ownerType   LinkOwnerType @map("owner_type")
  sortOrder   Int           @default(0) @map("sort_order")

  // 폴더 (필수)
  folderId String     @map("folder_id")
  folder   LinkFolder @relation(fields: [folderId], references: [id], onDelete: Cascade)

  // 소유자
  userId String? @map("user_id")
  user   User?   @relation("PersonalLinks", fields: [userId], references: [id], onDelete: Cascade)

  teamId String? @map("team_id")
  team   Team?   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // 생성자 (팀 링크의 경우 누가 추가했는지)
  createdById String @map("created_by_id")
  createdBy   User   @relation("CreatedLinks", fields: [createdById], references: [id])

  // 복사 원본 추적 (팀 → 개인 복사 시)
  sourceTeamLinkId String? @map("source_team_link_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId, ownerType])
  @@index([teamId, ownerType])
  @@index([folderId])
  @@index([rating])
  @@index([sortOrder])
  @@index([createdAt])
  @@map("links")

  views LinkView[]
}

model LinkView {
  id       String   @id @default(cuid())
  linkId   String   @map("link_id")
  link     Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  userId   String   @map("user_id")
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  viewedAt DateTime @default(now()) @map("viewed_at")

  @@unique([linkId, userId])
  @@index([linkId])
  @@index([userId])
  @@map("link_views")
}

// ============================================
// 템플릿 시스템
// ============================================

// 템플릿 카테고리 (매출관리, 인사관리 등)
model TemplateCategory {
  id          String  @id @default(cuid())
  key         String  @unique // 'sales', 'hr', 'finance' 등
  name        String // 표시 이름
  description String?
  icon        String // Lucide 아이콘 이름
  order       Int     @default(0) // 전역 순서

  templates Template[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("template_categories")
}

// 템플릿 (대시보드, 거래, 카테고리 등)
model Template {
  id           String  @id @default(cuid())
  key          String  @unique // 'dashboard', 'transactions' 등
  name         String // 표시 이름
  description  String? // 템플릿 설명
  icon         String // Lucide 아이콘 이름
  route        String // 라우트 경로
  previewImage String? @map("preview_image") // 미리보기 이미지 경로
  order        Int     @default(0) // 카테고리 내 순서
  isDefault    Boolean @default(false) // 기본 활성화 여부 (매출관리는 true)

  categoryId String           @map("category_id")
  category   TemplateCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  // 이 템플릿을 활성화한 팀들
  teamTemplates TeamTemplate[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("templates")
}

// 팀별 활성화된 템플릿
model TeamTemplate {
  id         String @id @default(cuid())
  teamId     String @map("team_id")
  templateId String @map("template_id")

  team     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  template Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  // 팀별 커스터마이징 (선택)
  customOrder Int?    @map("custom_order") // 순서 오버라이드
  customName  String? @map("custom_name") // 이름 오버라이드

  enabledAt DateTime @default(now()) @map("enabled_at")

  @@unique([teamId, templateId])
  @@map("team_templates")
}
